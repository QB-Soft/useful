{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "lib": ["es2019"],
        "outDir": "./dist",
        "target": "es5",
        "moduleResolution": "node"
    },
    "typedocOptions": {
        "out": "docs",
        "entryPoints": [
            "src/arrays/index.ts",
            "src/numbers/index.ts",
            "src/objects/index.ts",
            "src/util/index.ts"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}